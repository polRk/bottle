{
  "name": "notes-in-bottle",
  "version": "1.0.0",
  "description": "Your notes in bottle",
  "main": "index.js",
  "scripts": {
    "develop": "concurrently -r \"npm:ts-build:watch\" \"npm:start\"",
    "start": "parcel lib/index.html -p 3000",
    "build": "npm run ts-build && parcel build ./lib/index.html --public-url '/'",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "lint": "tslint-config-prettier-check ./tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "ts-check": "tsc --noEmit",
    "ts-build": "tsc",
    "ts-build:watch": "tsc -w"
  },
  "author": "Vladislav Polyakov",
  "license": "MIT",
  "dependencies": {
    "@bem-react/classname": "^1.4.4",
    "lodash": "^4.17.11",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-env": "7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.122",
    "@types/react": "^16.8.7",
    "@types/react-dom": "^16.8.2",
    "autoprefixer": "^9.4.10",
    "concurrently": "4.1.0",
    "husky": "1.3.1",
    "jest": "^24.3.1",
    "lint-staged": "^8.1.5",
    "parcel-bundler": "^1.12.0",
    "prettier": "1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,sass}": [
      "npm run prettify",
      "git add"
    ]
  },
  "engines": {
    "node": ">= 10.12.0",
    "npm": ">= 6.9.0",
    "yarn": ">= 1.10.1"
  }
}
