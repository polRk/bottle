{
  "name": "notes-in-bottle",
  "version": "1.0.0",
  "description": "Your notes in bottle",
  "main": "index.js",
  "homepage": "https://bottle.polrk.com",
  "scripts": {
    "start": "parcel src/index.html -p 3000",
    "build": "parcel build ./src/index.html --public-url '/'",
    "prettify": "prettier --write './src/**/*.{ts,tsx,css,scss}'",
    "lint": "tslint-config-prettier-check ./tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "ts-check": "tsc --noEmit"
  },
  "author": "Vladislav Polyakov",
  "license": "MIT",
  "dependencies": {
    "@bem-react/classname": "^1.4.4",
    "lodash": "^4.17.11",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-hooks-global-state": "^0.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-env": "7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.122",
    "@types/react": "^16.8.7",
    "@types/react-dom": "^16.8.2",
    "autoprefixer": "^9.4.10",
    "concurrently": "4.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "1.3.1",
    "jest": "^24.3.1",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "parcel-bundler": "^1.12.0",
    "prettier": "1.16.4",
    "standard-version": "^5.0.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,scss}": [
      "npm run prettify",
      "git add"
    ]
  },
  "engines": {
    "node": ">= 10.12.0",
    "npm": ">= 6.9.0",
    "yarn": ">= 1.10.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
